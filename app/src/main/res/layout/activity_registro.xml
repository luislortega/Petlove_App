<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="mx.com.petlove.petlove.ActivityRegistro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:clickable="false"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/registro"
            app:titleTextColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuario:" />

                <EditText
                    android:id="@+id/txtRegisterUser"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Usuario"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contrase単a:" />

                <EditText
                    android:id="@+id/txtRegisterPass1"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Contrase単a"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Repite la Contrase単a:" />

                <EditText
                    android:id="@+id/txtRegisterPass2"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Contrase単a"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numero de telefono:" />

                <EditText
                    android:id="@+id/txtRegisterNum"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="000-000-00-00"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/txtRegisterEmail"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="email@mail.com"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/txtView6"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de nacimiento:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCalendario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Fecha"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/txtRegisterFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="01/01/98"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pais:" />

                <Spinner
                    android:id="@+id/spinPais"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/paises" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/textview_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado:" />

                <Spinner
                    android:id="@+id/spinEdo"
                    style="@style/editText_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/estados" />

                <Button
                    android:id="@+id/btnRegistrar"
                    style="@style/button_style3"
                    android:layout_margin="40dp"
                    android:text="Registrar usuario" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
